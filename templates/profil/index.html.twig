{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <h3>Hello {{ app.user.email }}</h3>

    <hr>
    <h3>your payment methods</h3>
    <div class="border border-dark">
        <h4>Add payment method</h4>
        {{ form(formPayment) }}
    </div>
    {% for paymentMethod in app.user.paymentMethods %}
        <p><strong>{{ paymentMethod.cardNumber }}</strong></p>

    {% endfor %}
    <hr>

    <h3>your adresses</h3>
    <div class="border border-dark">
        <h4>Add adresses</h4>
        {{ form(formAdress) }}
    </div>

    {% for adress in app.user.adresses %}

        <p><strong>{{ adress.zipcode }}  {{ adress.city }}</strong></p>

    {% endfor %}


{% endblock %}