{% extends 'base.html.twig' %}

{% block body %}

    {% for product in products %}
        <div class="d-flex p-3">
            <div>
                <h3>{{ product.name }}</h3>
                <h4>Description : {{ product.description }}</h4>
                <p>Prix : {{ product.price }}</p>
                <p>{{ product.createdAt|date("m/d/Y") }}</p>
                <a href="{{ path('show_product', {id:product.id}) }}" class="btn btn-primary">Voir</a>
            </div>
    {% endfor %}


{% endblock %}